{
	"name": "moe-equipment-simulator",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"generate:schemas": "tsx src/scripts/generate-json-schemas.ts",
		"check": "biome check src assets",
		"format": "biome format src assets --write",
		"validate:json": "jsonschema validate assets/schemas/shields.schema.json assets/shields.json && jsonschema validate assets/schemas/weapons.schema.json assets/weapons.json && jsonschema validate assets/schemas/defences.schema.json assets/defences.json"
	},
	"dependencies": {
		"@mantine/core": "^8.1.2",
		"@mantine/hooks": "^8.1.2",
		"next": "15.3.4",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"uninstall": "^0.0.0",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"@sourcemeta/jsonschema": "^9.6.0",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"axios": "^1.10.0",
		"jsonschema": "^1.5.0",
		"playwright": "^1.53.2",
		"postcss": "^8.5.6",
		"postcss-preset-mantine": "^1.18.0",
		"postcss-simple-vars": "^7.0.1",
		"tailwindcss": "^4",
		"ts-essentials": "^10.1.1",
		"tsx": "^4.20.3",
		"typescript": "^5",
		"zod-to-json-schema": "^3.24.6"
	}
}
