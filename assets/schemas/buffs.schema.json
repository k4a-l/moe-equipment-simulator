{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "unedited": {
        "type": "boolean"
      },
      "effects": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "statusUp"
              },
              "object": {
                "type": "string"
              },
              "value": {
                "type": "number"
              },
              "method": {
                "type": "string",
                "enum": [
                  "add",
                  "multiply"
                ]
              }
            },
            "required": [
              "type",
              "object",
              "value",
              "method"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "text"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "required": [
      "name",
      "effects"
    ],
    "additionalProperties": false
  }
}